// Governance Note: TypeScript config for project structure and type safety. Ensures maintainable, teachable setup.
// Maintenance: Update compiler options and paths as codebase evolves. Keep all changes commented for future maintainers.
// Legacy Alignment: Follows "Stewardship" and "Clarity" pillars. Comments clarify teachability and governance.
{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noEmit": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "studio"],
  "plugins": [
    {
      "name": "next"
    }
  ]
}
